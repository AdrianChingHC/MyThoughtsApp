<div class="row">
	<div class="thought-page container">
			<div class="thought_form">
	 			<%= form_for(@thought) do |f| %>
		 		<%= render 'shared/error_messages', object: f.object %>
			  	<div class="field">
			   		<%= f.text_area :content, class:"form-control", placeholder: "What are you thinking now?" %>
			   	</div>
			   	<div class="field-button">
			  		<%= f.submit "Save", class: "btn btn-success" %>
			  	</div>
				<% end %>
			</div>
			<div class="col-md-8 thought-list tab-content">
				<div role="tabpanel" class="tab-pane active" id="home">
					<% if @feed_items.any? %>
						<h3> Your Thoughts (<%= current_user.thoughts.count %>)</h3>
					  <ol class="thoughts">
					    <%= render @feed_items %>
					  </ol>
					  <%= will_paginate @feed_items %>
					<% end %>
				</div>
				<% @hashtags.each do |hashtag| %>
					<div role="tabpanel" class="tab-pane" id="<%=hashtag.name%>">
						<h1>#<%= hashtag %></h1>
							<% if SimpleHashtag::Hashtag.find_by_name("#{hashtag}").hashtaggables.present? %>
					 		  <% SimpleHashtag::Hashtag.find_by_name("#{hashtag}").hashtaggables.each do |hashtagged| %>
					      <%= render_hashtaggable hashtagged %>
					  	  <% end %>
							<% else %>
					  		<p>There is no match for the <em><%= hashtag %></em> hashtag.</p>
							<% end %>
					</div>
				<%end%>

			</div>
	</div>
	<div class="rightbar">
		  <ul class="nav nav-tabs nav-stacked" role="tablist">
			  <li role="presentation"><%= link_to "My Thoughts", "#home", "aria-controls" => "home", "role" => "tab", "data-toggle" => "tab" %></li>
			  <% @hashtags.each do |hashtag| %>
  			<li role="presentation"><%= link_to "#"+hashtag.name, "##{hashtag.name}", "aria-controls" => "home", "role" => "tab", "data-toggle" => "tab" %></li>
				<% end %>
			</ul>
	</div>
</div>