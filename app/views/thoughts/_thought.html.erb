<li id="thought-<%= thought.id %>">
  <span class="content"><%= thought.content %></span>
  <div>
  	<span class="timestamp">
    Posted <%= time_ago_in_words(thought.created_at) %> ago.
  </span>
  <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, "#" %>
  <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, "#", method: :delete, data: { confirm: 'Are you sure?' }%>
  </div>
</li>

