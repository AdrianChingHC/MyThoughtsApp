<li id="thought-<%= thought.id %>">
  <span class="content" data-no-turbolink='true'><%= best_in_place thought, :content, as: :textarea, activator: "#activator-#{thought.id}", ok_button: "Save", ok_button_class: "btn btn-success", cancel_button: "Cancel", cancel_button_class: "btn btn-danger", display_as: "linkify" %></span>
  <div class="lower-part">
  	<span class="timestamp">
    Posted <%= time_ago_in_words(thought.created_at) %> ago.
  </span>
  <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, "#", id: "activator-#{thought.id}" %>
  <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, thought, method: :delete, data: { confirm: 'Are you sure?' }%>
  </div>
</li>

